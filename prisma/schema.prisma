datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Tier enum for user subscription level (FREE / PRO / TEAM)
enum Tier {
  FREE
  PRO
  TEAM
}

// User model - this should match Supabase auth users
model User {
  id           String   @id
  email        String   @unique
  name         String?
  avatarUrl    String?
  tier         Tier     @default(FREE)
  role           String   @default("user") // "admin" or "user"
  aiUsageCount   Int      @default(0)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  plans        Plan[]
  tasks        Task[]
  subscription Subscription?
  subscriptions UserSubscription[]

  // CMS
  entries      Entry[]  @relation("UserEntries")

  orders       Order[]
  habits      Habit[]       
  dailyNotes  DailyNote[]   


  @@map("users")
}


// Plan model (user productivity plan)
model Plan {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  progress    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  tasks       Task[]

  @@map("plans")
}

// Task model
model Task {
  id               String    @id @default(uuid())
  planId           String?
  plan             Plan?     @relation(fields: [planId], references: [id], onDelete: Cascade)
  userId           String
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title            String
  description      String?
  date             DateTime?
  dueDate          DateTime?
  completed        Boolean   @default(false)
  status           String    @default("Pending")
  priority         String?
  estimatedMinutes Int?
  timeSpentMinutes Int?      @default(0)
  metadata         Json?     @default("{}")
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  subtasks         Subtask[]
  tags             TaskTag[]

  @@map("tasks")
}

// Subtask model
model Subtask {
  id        String   @id @default(uuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("subtasks")
}

// Tag model
model Tag {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  
  // Relations
  tasks     TaskTag[]

  @@map("tags")
}

// Junction table for Task <-> Tag many-to-many
model TaskTag {
  id        String @id @default(uuid())
  taskId    String
  tagId     String
  task      Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  tag       Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([taskId, tagId])
  @@map("task_tags")
}

// Legacy subscription record for billing (kept for backwards compatibility)
model Subscription {
  id               String    @id @default(cuid())
  user             User      @relation(fields: [userId], references: [id])
  userId           String    @unique
  stripeCustomer   String?   @db.VarChar(191)   // legacy field (if you used Stripe)
  stripeSubId      String?   @unique @db.VarChar(191) // legacy
  priceId          String?   // legacy price mapping
  status           String?   // active / past_due / canceled etc. (legacy)
  currentPeriodEnd DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@map("subscriptions")
  @@index([stripeCustomer])
  @@index([stripeSubId])
}

/**
 * New CMS / Billing models
 */

// Content type & entry models (CMS)
model ContentType {
  id         String   @id @default(cuid())
  key        String   @unique
  name       String
  schema     Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  entries    Entry[]
  @@map("content_types")
}

model Entry {
  id            String      @id @default(cuid())
  contentTypeId String
  contentType   ContentType @relation(fields: [contentTypeId], references: [id])
  slug          String?     @unique
  title         String?
  status        String      @default("draft")
  data          Json
  locale        String?
  requiresTier  String?
  publishedAt   DateTime?

  createdById   String
  createdBy     User        @relation("UserEntries", fields: [createdById], references: [id])

  updatedAt     DateTime    @updatedAt
  createdAt     DateTime    @default(now())
  revisions     Revision[]

  @@index([slug])
  @@map("entries")
}

model Revision {
  id        String   @id @default(cuid())
  entryId   String
  entry     Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)
  data      Json
  createdBy String
  createdAt DateTime @default(now())
  @@map("revisions")
}

model Media {
  id         String   @id @default(cuid())
  key        String   @unique // storage key/path
  url        String   // CDN URL
  filename   String
  mimeType   String
  size       Int
  width      Int?
  height     Int?
  uploadedBy String?
  createdAt  DateTime @default(now())
  @@map("media")
}

/**
 * Product / Feature / Billing domain
 */

// Product (a purchasable product in CMS, e.g., "pro-monthly")
model Product {
  id          String   @id @default(cuid())
  key         String   @unique // e.g., "PRO_MONTHLY"
  name        String
  description String?
  price       Int      // in paise (Razorpay expects paise)
  currency    String   @default("INR")
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  productFeatures ProductFeature[]
  subscriptions   UserSubscription[]
  orders          Order[]
}

// Feature (logical feature flags)
model Feature {
  id          String   @id @default(cuid())
  key         String   @unique // "AI_PLAN", "MAX_PLANS"
  description String?
  createdAt   DateTime @default(now())

  productFeatures ProductFeature[]
}

// ProductFeature (mapping a product -> feature with a JSON value)
model ProductFeature {
  id        String @id @default(cuid())
  productId String
  featureId String
  value     Json   // { enabled: true } or { limit: 10 } or any shape

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  feature   Feature @relation(fields: [featureId], references: [id], onDelete: Cascade)

  @@unique([productId, featureId])
}

// UserSubscription (the active subscription for a user to a product)
model UserSubscription {
  id               String   @id @default(cuid())
  userId           String
  productId        String
  status           String   // active / canceled / past_due / trialing
  startedAt        DateTime @default(now())
  currentPeriodEnd DateTime?
  provider         String?  // e.g., "razorpay"
  providerSubId    String?  // e.g., razorpay subscription id or payment id
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

// Order (individual purchase attempts / razorpay orders)
model Order {
  id                String   @id @default(cuid())
  userId            String?
  productId         String?
  amount            Int
  currency          String   @default("INR")
  providerOrderId   String?  @unique
  providerPaymentId String?
  status            String
  metadata          Json?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user    User?    @relation(fields: [userId], references: [id])
  product Product? @relation(fields: [productId], references: [id])
}



model Habit {
  id        String     @id @default(uuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  icon      String?    // e.g., "dumbbell", "book", "droplet"
  color     String?    // e.g., "bg-blue-500"
  order     Int        @default(0)
  active    Boolean    @default(true)
  createdAt DateTime   @default(now())
  logs      HabitLog[]

  @@map("habits")
}

model HabitLog {
  id        String   @id @default(uuid())
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  date      DateTime // Stored as YYYY-MM-DD T00:00:00Z
  completed Boolean  @default(false)
  
  @@unique([habitId, date]) // Ensure one log per habit per day
  @@map("habit_logs")
}

model DailyNote {
   id        String   @id @default(uuid())
   userId    String
   user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
   date      DateTime // Stored as YYYY-MM-DD
   content   String?
   
   @@unique([userId, date])
   @@map("daily_notes")
}
