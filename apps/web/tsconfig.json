{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
        "@/*": ["./*"],
      "@/components/*": ["app/components/*"],
      "@/utils/*": ["app/utils/*"],
      "@/hooks/*": ["app/hooks/*"],
      "@domain/*": ["../../packages/domain/*"],
      "@domain": ["../../packages/domain/index.ts"]

    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

